@model IEnumerable<PABP_Projekat2.Models.EmployeesByTerritoriesRegions>

@{
	ViewData["Title"] = "EmployeeTerritoryRegion";
}

<h1>EmployeeTerritoryRegion</h1>

<div class="row">
	<div class="col-md-8">
		<form asp-action="Index">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label class="control-label">Search Territory:</label>
				<input type="text" name="territoryDescription" class="form-control" />
			</div>
			<div class="form-group">
				<label class="control-label">Region</label>
				<select class="form-control" name="regionId" asp-items="ViewBag.Regions"></select>
			</div>
			<div class="form-group">
				<input type="submit" value="Search" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th scope="col">@Html.DisplayNameFor(model => model.TerritoryDescription)</th>
				<th scope="col">@Html.DisplayNameFor(model => model.RegionDescription)</th>
				<th scope="col">@Html.DisplayNameFor(model => model.EmployeeCount)</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var data in Model)
			{
				<tr>
					<td>@data.TerritoryDescription</td>
					<td>@data.RegionDescription</td>
					<td>@data.EmployeeCount</td>
				</tr>
			}
		</tbody>
	</table>
</div>

